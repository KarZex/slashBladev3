{
  "format_version": "1.16.100",
  "minecraft:item": {
    "description": {
      "identifier": "blade:balkong",
      "category" : "equipment" 
    },

    "components": {
      "minecraft:can_destroy_in_creative": false,
      "minecraft:max_stack_size": 1,
      "minecraft:hand_equipped": true,
      "minecraft:use_duration": 0,
	  "minecraft:damage": 1,
      "minecraft:icon": {
        "texture": "balkong"
      },
	  "minecraft:weapon": {
		"on_hurt_entity": {
			"event": "zex:up",
			"target": "self"
		},
		"on_not_hurt_entity": {
			"event": "zex:down",
			"target": "self"
		},
		"on_hit_block": {
			"event": "zex:down",
			"target": "self"
		}
	  },
	  "minecraft:durability": {
		"max_durability": 70
	  },
      "minecraft:display_name": {},
	  "minecraft:enchantable": {
		"value": 14,
		"slot": "sword"
	  },
	  "minecraft:on_use": {
		"on_use": {
			"event": "zex:on_use",
			"target": "self"
		}
	  },
	  "minecraft:render_offsets": {
		"main_hand": {
			"third_person": {"scale": [0,0,0]},
			"first_person": {"scale": [0,0,0]}
			}
	   },
      "minecraft:creative_category": {
        "parent": "itemGroup.name.guns"
      }
    },		
	"events": {
			"zex:on_use": {
				"sequence": [
					{
						"sequence": [
							{
								"sequence": [
									{
										"condition": "query.remaining_durability >= 1",
										"run_command": {
											"command": [
												"execute @e[family=monster,r=5,c=1] ~~~ tag @p add sed",
												"scoreboard players remove @s[tag=!sed,scores={blade=1..}] blade 3",
												"scoreboard players add @s[tag=sed,scores={blade=..70}] blade 2",
								"give @s[tag=sed] zex:tinyproudsoul",
												"tag @s remove sed",
												"execute @s[scores={blade=..19}] ~~~ damage @e[r=5,family=monster] 1 suicide entity @s",
												"execute @s[scores={blade=20..39}] ~~~ damage @e[r=5,family=monster] 5 suicide entity @s",
												"execute @s[scores={blade=40..59}] ~~~ damage @e[r=5,family=monster] 10 suicide entity @s",
												"execute @s[scores={blade=60..}] ~~~ damage @e[r=5,family=monster] 20 suicide entity @s",
												"playsound swingblade.c @s",
												"playanimation @s[scores={wood=0}] animation.sword.first.using",
												"playanimation @s[scores={wood=1}] animation.sword.first.using2",
												"playanimation @s[scores={wood=2}] animation.sword.first.using",
												"playanimation @s[scores={wood=3}] animation.sword.first.using",
												"playanimation @s[scores={wood=4}] animation.sword.first.using2",
												"scoreboard players add @s[scores={wood=..5}] wood 1",
												"scoreboard players set @s[scores={wood=5..}] wood 0",
												"function level"
											],
											"target": "holder"
										}
									}
								]
							}
						]
					},
					{
						"condition": "!query.is_sprinting && query.remaining_durability >= 1",
						"sequence": [
							{
								"sequence": [
									{
										"run_command": {
											"command": [
												"tag @s add fly"
											],
											"target": "holder"
										}
									}
								]
							}
						]
					},
					{
						"condition": "( query.is_sprinting && query.remaining_durability >= 1 ) && !query.is_on_ground",
						"sequence": [
							{
								"sequence": [
									{
										"run_command": {
											"command": [
												"tag @s add run"
											],
											"target": "holder"
										}
									}
								]
							}
						]
					},
					{
						"condition": "query.remaining_durability >= 1",
						"sequence": [
							{
								"sequence": [
									{
										"damage": {
											"type": "durability",
											"amount": 1,
											"target": "self"
										}
									}
								]
							}
						]
					}
				]
			},
			"zex:up": {
				"sequence": [
					{
						"damage": {
							"type": "durability",
							"amount": 1,
							"target": "self"
						}
					},
					{
						"run_command": {
							"command": [
								"playsound swingblade.c @s",
								"particle minecraft:critical_hit_emitter ^^2^2",
								"playanimation @s animation.sword.first.attack",
								"scoreboard players add @s[scores={blade=..70}] blade 2",
								"give @s[tag=sed] zex:tinyproudsoul",
								"function level"
							],
							"target": "holder"
						}
					}
				]
			},
			"zex:down": {
				"sequence": [
					{
						"damage": {
							"type": "durability",
							"amount": 1,
							"target": "self"
						},
						"run_command": {
							"command": [
								"playsound swingblade.c @s",
								"particle minecraft:critical_hit_emitter ^^2^2",
								"function level",
								"playanimation @s animation.sword.first.attack",
								"scoreboard players remove @s[scores={blade=1..}] blade 3"
							],
							"target": "holder"
						}
					}
				]
			}
		}
	}
}