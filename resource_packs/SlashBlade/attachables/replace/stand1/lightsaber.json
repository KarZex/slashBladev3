{
  "format_version": "1.16.100",
  "minecraft:attachable": {
    "description": {
      "identifier": "blade:lightsaber.bladestand1",
      "item": {
        "blade:lightsaber": "query.owner_identifier == 'zex:bladestand1'"
      },
      "materials": {
        "default": "entity_emissive_alpha"
      },
      "textures": {
        "default": "textures/models/lightsaber"
      },
      "geometry": {
        "default": "geometry.lightsaber"
      },
      "animations": {
        "root": "animation.sword.stand"
      },
      "scripts": {
        "pre_animation": [
          "v.main_hand = c.item_slot == 'main_hand';"
        ],
        "animate": [
          "root",
          {
            "first": "(v.main_hand && c.is_first_person)"
          },
          {
            "third": "v.main_hand && !c.is_first_person"
          }
        ]
      },
      "render_controllers": [
        "controller.render.default"
      ]
    }
  }
}