{
	"format_version" : "1.10.0",
	"animation_controllers" : {
		"controller.animation.blade" : {
			"initial_state" : "default",
			"states" : {
				"default" : {
					"transitions" : [
						{
							"pre" : "query.is_using_item"
						},
						{
							"melee" : "(variable.attack_time > 0) && !query.is_using_item"
						}
					]
				},
				"pre" : {
					"transitions" : [
						{
							"attack" : "!query.is_using_item && ((!query.is_sneaking || query.is_on_ground) && query.state_time <= 1.0)"
						},
						{
							"usesa" : "!query.is_using_item && ((query.is_sneaking && !query.is_on_ground) || query.state_time > 1.0)"
						}
					]
				},
				"usesa" : {
					"animations" : [ "use" ],
					"transitions" : [
						{
							"default" : "query.state_time > 1.0"
						}
					]
				},
				"attack" : {
					"animations" : [ "use" ],
					"transitions" : [
						{
							"pre2" : "query.is_using_item"
						},
						{
							"default" : "query.state_time > 1.0"
						}
					]
				},
				"pre2" : {
					"transitions" : [
						{
							"attack2" : "!query.is_using_item"
						}
					]
				},
				"attack2" : {
					"animations" : [ "use2" ],
					"transitions" : [
						{
							"pre3" : "query.is_using_item"
						},
						{
							"default" : "query.state_time > 1.0"
						}
					]
				},
				"pre3" : {
					"transitions" : [
						{
							"attack3" : "!query.is_using_item"
						}
					]
				},
				"attack3" : {
					"animations" : [ "use3" ],
					"transitions" : [
						{
							"pre4" : "query.is_using_item"
						},
						{
							"default" : "query.state_time > 1.0"
						}
					]
				},
				"pre4" : {
					"transitions" : [
						{
							"attack4" : "!query.is_using_item"
						}
					]
				},
				"attack4" : {
					"animations" : [ "use4" ],
					"transitions" : [
						{
							"pre" : "query.is_using_item"
						},
						{
							"default" : "query.state_time > 1.0"
						}
					]
				},
				"melee" : {
					"animations" : [ "atk" ],
					"transitions" : [
						{
							"pre" : "query.is_using_item"
						},
						{
							"default" : "query.state_time > 1.0"
						}
					]
				}

			}
		}
	}
}
